  "license": "MIT",
  "keywords": [
    "reactjs",
    "jest"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mariancraciun1983/React-Boilerplate.git"
  },
  "dependencies": {
    "@babel/core": "^7.10.1",
    "@babel/preset-env": "^7.10.1",
    "@babel/register": "^7.6.0",
    "body-parser": "^1.19.0",
    "classnames": "^2.2.6",
    "compression": "^1.7.4",
    "express": "^4.17.1",
    "get-value": "^3.0.1",
    "history": "^4.10.1",
    "js-cookie": "^2.2.1",
    "node-sass": "^4.12.0",
    "node-yaml": "^4.0.1",
    "path": "^0.12.7",
    "prop-types": "^15.7.2",
    "react": "^16.10.2",
    "react-dom": "^16.10.2",
    "react-redux": "^7.1.3",
    "react-router": "^5.1.2",
    "react-router-dom": "^5.0.1",
    "react-router-redux": "^4.0.8",
    "redux": "^4.0.4",
    "redux-actions": "^2.6.5",
    "redux-form": "^8.2.6",
    "redux-saga": "^1.0.5",
    "reselect": "^4.0.0",
    "slugify": "^1.3.5",
    "svg-placeholder": "^2.0.0"
  },
  "scripts": {
    "config": "node tools/config.js",
    "dev": "npm-run-all --parallel dev:serve",
    "dev:serve": "nodemon --watch 'src/backend/**/*' --watch 'config/*.*' tools/dev.js",
    "lint": "npm-run-all lint:app lint:styles",
    "lint:app": "eslint --cache --color 'src/frontend/**/*.js'",
    "lint:backend": "eslint --cache --color 'src/backend/**/*.js'",
    "lint:tests": "eslint --cache --color '__test__/jest/**/*.test.js'",
    "lint:styles": "sass-lint -c ./src/frontend/styles/.sasslintrc ",
    "test": "npm-run-all test:app",
    "test:app": "jest -c __test__/jest/.jest.config.js --coverage",
    "test:app:watch": "jest -c __test__/jest/.jest.config.js  --watch --coverage",
    "coveralls": "cat __test__/jest/coverage/lcov.info | coveralls -v",
    "build": "npm-run-all build:js",
    "build:js": "webpack --colors --config tools/build.js",
    "build:js-analyze": "NODE_ENV=analyse webpack --colors --config tools/build.js --profile",
    "prod:serve": "node tools/serve.js"
  },
  "devDependencies": {
    "@babel/preset-react": "^7.0.0",
    "@hot-loader/react-dom": "^16.9.0",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^24.9.0",
    "babel-loader": "^8.0.6",
    "clean-webpack-plugin": "^3.0.0",
    "clone-deep": "^4.0.1",
    "copy-webpack-plugin": "5.0.5",
    "coveralls": "^3.0.6",
    "css-loader": "^3.2.0",
    "cypress": "^3.4.1",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "enzyme-to-json": "^3.4.2",
    "eslint": "^6.5.1",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.4.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "2.18.2",
    "eslint-plugin-jest": "^23.0.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.16.0",
    "eslint-plugin-standard": "^4.0.1",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^3.0.8",
    "jest": "^24.9.0",
    "jest-cli": "^24.9.0",
    "jest-fetch-mock": "^2.1.2",
    "jest-matcher-deep-close-to": "^1.3.0",
    "kill-port": "^1.5.2",
    "nodemon": "^2.0.0",
    "npm-run-all": "^4.1.5",
    "postcss-loader": "^3.0.0",
    "precss": "^4.0.0",
    "prettier": "^1.18.2",
    "progress-bar-webpack-plugin": "^1.12.1",
    "react-hot-loader": "^4.12.15",
    "react-test-renderer": "^16.10.2",
    "redux-mock-store": "^1.5.3",
    "redux-saga-test-plan": "^4.0.0-rc.1",
    "sass-lint": "^1.13.1",
    "sass-loader": "^8.0.0",
    "style-loader": "^1.0.0",
    "webpack": "^4.40.2",
    "webpack-bundle-analyzer": "^3.5.1",
    "webpack-cli": "^3.3.9",
    "webpack-dev-middleware": "^3.7.1",
    "webpack-hot-middleware": "^2.25.0"
  },
  "engines": {
    "node": ">= 10"
  }
}
